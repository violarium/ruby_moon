        <% else %>
            <li class="<%= params[:controller] == 'user_sessions' ? 'active' : '' %>"><%= link_to t('.sign_in'), sign_in_url %></li>
            <li class="<%= params[:controller] == 'users' ? 'active' : '' %>"><%= link_to t('.sign_up'), sign_up_url %></li>
