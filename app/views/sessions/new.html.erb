<% content_for(:title, t('.sign_in')) %>

<div class="user-form-container">
  <h1 class="user-form-header"><%= t('.sign_in') %></h1>

  <%= form_for(@sign_in_form, url: sign_in_url, method: :post, html: { class: 'form-horizontal' }) do |f| %>
    <% if @sign_in_form.errors.any? %>
          <div class="form-group">
              <div class="text-danger col-sm-offset-4 col-sm-8">
                <% @sign_in_form.errors.full_messages.each do |error| %>
                    <div><%= error %></div>
                <% end %>
              </div>
          </div>
    <% end %>

    <div class="form-group">
      <%= f.label(:email, nil, class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= f.email_field(:email, placeholder: human_attribute(f.object, :email), class: 'form-control', autofocus: '') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label(:password, nil, class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= f.password_field(:password, placeholder: human_attribute(f.object, :password), class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-4">
        <div class="checkbox">
          <label>
            <%= f.check_box(:remember) %>
            <%= human_attribute(f.object, :remember) %>
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.button(t('.sign_in'), class: 'btn btn-default') %>
      </div>
    </div>
  <% end %>
</div>