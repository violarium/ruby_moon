<% content_for(:title, t('.title')) %>

<div class="user-form-container">
  <h1><%= t('.header') %></h1>

  <%= form_for(@send_form, url: send_password_reset_url, method: :post, html: { class: 'form-horizontal' }) do |f| %>
    <% if @send_form.errors.any? %>
      <div class="form-group">
        <div class="text-danger col-sm-offset-4 col-sm-8">
          <% @send_form.errors.full_messages.each do |error| %>
            <div><%= error %></div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label(:email, nil, class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= f.email_field(:email, placeholder: human_attribute(f.object, :email), class: 'form-control', autofocus: '') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.button(t('.send'), class: 'btn btn-default') %>
      </div>
    </div>
  <% end %>
</div>